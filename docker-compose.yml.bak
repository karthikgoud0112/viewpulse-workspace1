services:
  mysql_db:
    image: mysql:8.0
    container_name: viewpulse_mysql
    environment:
      MYSQL_ROOT_PASSWORD: ${MYSQL_ROOT_PASSWORD}
      MYSQL_DATABASE: viewpulse_db
    volumes:
      - mysql_data:/var/lib/mysql
    ports:
      - "3307:3306"
    restart: always

  backend:
    build:
      context: ./viewpulse-backend
    container_name: viewpulse_backend
    ports:
      - "8080:8080"
    depends_on:
      - mysql_db
      - ai_service
    environment:
      SPRING_DATASOURCE_URL: "jdbc:mysql://mysql_db:3306/viewpulse_db?allowPublicKeyRetrieval=true&useSSL=false&serverTimezone=UTC"
      SPRING_DATASOURCE_USERNAME: root
      SPRING_DATASOURCE_PASSWORD: ${SPRING_DATASOURCE_PASSWORD:-root}
      AI_SERVICE_URL: "http://ai_service:5000/"
      SPRING_MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE: "*"
      SPRING_MANAGEMENT_ENDPOINT_HEALTH_SHOW_DETAILS: "always"
      WHATSAPP_ACCESS_TOKEN: ""
      WHATSAPP_BUSINESS_PHONE_ID: ""
    volumes:
      - backend_uploads:/app/uploads/videos
    restart: always

  ai_service:
    build:
      context: ./viewpulse-ai
    container_name: viewpulse_ai
    ports:
      - "5000:5000"
    restart: always

volumes:
  mysql_data:
  backend_uploads:
